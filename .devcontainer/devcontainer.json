{
  "name": "cursor-micromamba",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/.venv/bin/python"
      }
    }
  },
  "postCreateCommand": "micromamba create -y -p /workspaces/.venv -f environment.yml"
}
