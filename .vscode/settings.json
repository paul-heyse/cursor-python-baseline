{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-q"],
  "terminal.integrated.profiles.linux": {
    "Micromamba (project)": {
      "path": "/bin/bash",
      "args": [
        "-lc",
        "eval \"$(micromamba shell hook -s bash)\" && micromamba activate -p \"${workspaceFolder}/.venv\" && exec bash -l"
      ],
      "overrideName": true
    }
  },
  "terminal.integrated.defaultProfile.linux": "Micromamba (project)"
  // Prevent the Python extension from trying its own activation strategy
  "python.terminal.activateEnvironment": false
}
