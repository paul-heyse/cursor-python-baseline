{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pytest",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python -m pytest -q",
      "group": "test"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/ruff check src tests && ${workspaceFolder}/.venv/bin/black --check ."
    },
    {
      "label": "format",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/black ."
    }
  ]
}
